@model List<Mission08_Team0211.Models.Task>

@{
    ViewData["Title"] = "Task Quadrants";
}

<h2 class="text-center">Task Quadrants</h2>

<div class="quadrant-container">
    <!-- Quadrant I -->
    <div class="quadrant quadrant-1">
        <h4>Quadrant I: Important / Urgent</h4>
        @foreach (var task in Model.Where(t => t.Quadrant == 1))
        {
            <div class="task-card">
                <p><strong>@task.TaskName</strong></p>
                <p>Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")</p>
                @* <p>Category: @task.Category.Name</p> *@
                <p>Status: @(task.Completed ? "Completed" : "Pending")</p>
            </div>
        }
    </div>

    <!-- Quadrant II -->
    <div class="quadrant quadrant-2">
        <h4>Quadrant II: Important / Not Urgent</h4>
        @foreach (var task in Model.Where(t => t.Quadrant == 2))
        {
            <div class="task-card">
                <p><strong>@task.TaskName</strong></p>
                <p>Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")</p>
                @* <p>Category: @task.Category.Name</p> *@
                <p>Status: @(task.Completed ? "Completed" : "Pending")</p>
            </div>
        }
    </div>

    <!-- Quadrant III -->
    <div class="quadrant quadrant-3">
        <h4>Quadrant III: Not Important / Urgent</h4>
        @foreach (var task in Model.Where(t => t.Quadrant == 3))
        {
            <div class="task-card">
                <p><strong>@task.TaskName</strong></p>
                <p>Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")</p>
                @* <p>Category: @task.Category.Name</p> *@
                <p>Status: @(task.Completed ? "Completed" : "Pending")</p>
            </div>
        }
    </div>

    <!-- Quadrant IV -->
    <div class="quadrant quadrant-4">
        <h4>Quadrant IV: Not Important / Not Urgent</h4>
        @foreach (var task in Model.Where(t => t.Quadrant == 4))
        {
            <div class="task-card">
                <p><strong>@task.TaskName</strong></p>
                <p>Due: @(task.DueDate?.ToString("MM/dd/yyyy") ?? "No due date")</p>
                @* <p>Category: @task.Category.Name</p> *@
                <p>Status: @(task.Completed ? "Completed" : "Pending")</p>
            </div>
        }
    </div>
</div>

<!-- Quadrant CSS Styling -->
<style>
    .quadrant-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 20px;
        max-width: 900px;
        margin: 20px auto;
    }

    .quadrant {
        padding: 15px;
        border-radius: 8px;
        text-align: center;
    }

    .quadrant-1 {
        background-color: #ff6b6b;
        color: white;
    }

    .quadrant-2 {
        background-color: #4ecdc4;
        color: white;
    }

    .quadrant-3 {
        background-color: #ffcc5c;
        color: black;
    }

    .quadrant-4 {
        background-color: #c8d6e5;
        color: black;
    }

    .task-card {
        background: white;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        color: black;
    }

    h4 {
        margin-bottom: 10px;
        text-transform: uppercase;
    }
</style>
